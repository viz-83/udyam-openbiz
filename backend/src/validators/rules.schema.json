{
  "step1": [
    { "key": "aadhaarNo", "required": true, "maxlength": 12, "pattern": "^[0-9]{12}$" },
    { "key": "ownerName", "required": true, "maxlength": 100 }
  ],
  "step2": [
    { "key": "pan", "required": true, "maxlength": 10, "pattern": "^[A-Za-z]{5}[0-9]{4}[A-Za-z]{1}$" },
    { "key": "enterpriseName", "required": true, "maxlength": 200 },
    { "key": "orgType", "required": true, "enum": ["proprietorship","partnership","pvtltd","publicltd"] },
    { "key": "incorpDate", "required": true, "type": "date" },
    { "key": "hasGstin", "required": true, "type": "boolean" },
    { "key": "gstin", "requiredIf": { "hasGstin": true }, "maxlength": 15,
      "pattern": "^[0-9]{2}[A-Za-z]{5}[0-9]{4}[A-Za-z]{1}[Zz]{1}[0-9A-Za-z]{1}$" },
    { "key": "socialCategory", "required": true, "enum": ["gen","sc","st","obc"] },
    { "key": "physicallyDisabled", "required": true, "type": "boolean" },
    { "key": "authorisedName", "required": true, "maxlength": 100 },
    { "key": "mobile", "required": true, "maxlength": 10, "pattern": "^[0-9]{10}$" },
    { "key": "email", "required": true, "type": "email" },
    { "key": "nic2Digit", "required": true, "enum": ["01","10"] },
    { "key": "majorActivity", "required": true, "enum": ["manufacturing","service"] }
  ]
}
